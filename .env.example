# Domínio base (usado pelo Traefik para roteamento)
HOMELAB_DOMAIN=example.local

# E-mail para ACME/Let's Encrypt
ACME_EMAIL=admin@example.local

# URL do CA para emissão de certificados (usar produção quando o DNS estiver público)
ACME_CA_SERVER=https://acme-staging-v02.api.letsencrypt.org/directory

# Porta de painel do Traefik
TRAEFIK_DASHBOARD_PORT=8080

# Porta HTTP pública (pode ser 80 se exposto)
TRAEFIK_HTTP_PORT=80

# Porta HTTPS pública (pode ser 443 se exposto)
TRAEFIK_HTTPS_PORT=443

# Usuário padrão referenciado em paths
HOMELAB_USER=homelab

# Rede externa usada pelo proxy para falar com os apps
PROXY_NETWORK=proxy_net

# Rede interna protegida
INTERNAL_NETWORK=internal_net

# Rede VPN (será configurada futuramente)
VPN_NETWORK=vpn_net

# Gitea (Git self-hosted)
GITEA_ADMIN_USER=gitea_admin
GITEA_ADMIN_PASSWORD=CHANGE_ME
GITEA_ADMIN_EMAIL=gitea_admin@example.local
GITEA_SECRET_KEY=CHANGE_ME

# Credenciais do Nextcloud (defina senhas fortes antes de subir a stack core)
NEXTCLOUD_DB_PASSWORD=CHANGE_ME
NEXTCLOUD_ADMIN_USER=nc_admin
NEXTCLOUD_ADMIN_PASSWORD=CHANGE_ME
NEXTCLOUD_USER=nc_user
NEXTCLOUD_USER_PASSWORD=CHANGE_ME
NEXTCLOUD_TRUSTED_DOMAINS=nextcloud.example.local

# Hostname/IP público do servidor WireGuard (pode usar nome do contêiner em laboratório)
WIREGUARD_ENDPOINT=wireguard

# Porta UDP do WireGuard
WIREGUARD_PORT=51820

# Subrede do túnel VPN
WIREGUARD_SUBNET=10.13.13.0/24

# Interface WAN usada pelo UFW para NAT do WireGuard
UFW_WAN_INTERFACE=eth0

# CIDR autorizado a acessar o dashboard local do Traefik
UFW_DASHBOARD_CIDR=192.168.0.0/16

# Backup do Nextcloud
NEXTCLOUD_BACKUP_SOURCE=/srv/homelab/nextcloud/data
NEXTCLOUD_BACKUP_TARGET=/srv/homelab/backups/nextcloud
NEXTCLOUD_BACKUP_LOG=/srv/homelab/backups/nextcloud/nextcloud_backup.log
NEXTCLOUD_BACKUP_RETENTION=7

# Jellyfin (transcodificação)
# Devices de HW accel (VAAPI/V4L2) mapeados por padrão para Raspberry Pi 4/5
VIDEO_GID=44
JELLYFIN_DRI_DEVICE=/dev/dri/renderD128
JELLYFIN_GPU_DEVICE=/dev/dri/card0
JELLYFIN_V4L2_MAIN=/dev/video11
JELLYFIN_V4L2_IMAGE=/dev/video31
# Limites de recursos do contêiner para preservar performance geral do host
JELLYFIN_MEMORY_LIMIT=2g
JELLYFIN_CPU_LIMIT=1.5
